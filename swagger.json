{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "My User Project CRUD",
        "description": "My User Project Application API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/user/addDetails": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Login to your account",
                "parameters": [
                    {
                        "name": "userLogin",
                        "in": "body",
                        "description": "login to account",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "login success",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                }
            }
        },
         "/user/sendotp": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "send otp to your account",
                "parameters": [
                    {
                        "name": "UserOtp",
                        "in": "body",
                        "description": "send otp to email",
                        "schema": {
                            "$ref": "#/definitions/UserOtp"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "otp sent successfully",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                }
            }
        },
        "/user/verifyOtp": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "verify otp",
                "parameters": [
                    {
                        "name": "VerifyOtp",
                        "in": "body",
                        "description": "verify otp",
                        "schema": {
                            "$ref": "#/definitions/VerifyOtp"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Your Email is now verified",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
               "userName",
               "email",
               "password"
            ],
            "properties": {
                "userName": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "UserLogin": {
            "required": [
                "userName",
                "password"
            ],
            "properties": {
                "userName": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "UserOtp": {
            "required": [
                "email"
            ],
            "properties": {
                "email": {
                    "type": "string"
                }
            }
        },
        "VerifyOtp": {
            "required": [
                "email"
            ],
            "properties": {
                "email": {
                    "type": "string"
                }
            }
        }
    }
}